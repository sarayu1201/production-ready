# Backend Environment Variables
MONGODB_URI=mongodb://admin:password123@mongodb:27017/payment-gateway?authSource=admin
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRE=7d
NODE_ENV=development
PORT=3000

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# Payment Gateway Configuration
PAYMENT_PROVIDER_KEY=your-payment-provider-api-key
PAYMENT_PROVIDER_SECRET=your-payment-provider-secret
WEBHOOK_SECRET=your-webhook-secret-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@paymentgateway.com

# Database Configuration
DB_HOST=mongodb
DB_PORT=27017
DB_USER=admin
DB_PASSWORD=password123
DB_NAME=payment-gateway

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# AWS/Cloud Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
